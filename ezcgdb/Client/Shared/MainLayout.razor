@inherits LayoutComponentBase


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer Anchor="Anchor.Right" @bind-Open="_drawerOpen">
        <MudDrawerHeader>
            <MudText Typo="Typo.subtitle2"><LoginDisplay /></MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudAppBar Elevation="0">
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}